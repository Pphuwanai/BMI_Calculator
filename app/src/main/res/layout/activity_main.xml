<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bmicalculator.MainActivity">

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#5b5959"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="118dp"
            android:layout_height="93dp"
            android:id="@+id/imageView"
            android:background="@drawable/bmi"
            android:layout_weight="0.11" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_high"
            android:id="@+id/textView"
            android:textSize="20sp"
            android:textColor="#ffed47"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:padding="0dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editText"
            android:background="#fefcfc"
            android:gravity="right"
            android:layout_marginBottom="20dp"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_weight"
            android:id="@+id/textView2"
            android:textSize="20sp"
            android:textColor="#ffed47"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:padding="0dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editText2"
            android:background="#fefcfc"
            android:gravity="right"
            android:layout_marginBottom="20dp"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/buttom"
            android:id="@+id/button"
            android:layout_marginTop="15dp"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>
